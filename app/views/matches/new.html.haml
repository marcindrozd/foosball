%h1 Add a match

= form_for @match do |f|
  = f.label :player1
  = f.hidden_field(:player1, value: current_player.id)
  = current_player.full_name
  = f.label :score_player1
  = f.text_field :score_player1
  %br
  = f.label :player2
  = f.select :player2, Player.all.map(&:email)
  = f.label :score_player2
  = f.text_field :score_player2
  %br
  = f.submit
